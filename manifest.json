{
    "name": "SEO Wallet",
    "manifest_version": 3,
    "version": "0.1",
    "description": "SEO Wallet",
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "scripting",
        "storage",
        "unlimitedStorage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "contentScripts.js",
                "js/index.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "persistent": true
    },
    "icons": {
        "16": "logo/logo_16x16.png",
        "48": "logo/logo_48x48.png",
        "128": "logo/logo_128x128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html",
                "js/index.js",
                "index.css",
                "svg/*",
                "font/*",
                "logo/*"
            ],
            "matches": [
                "https://*/*",
                "http://*/*"
            ]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "minimum_chrome_version": "92"
    }
}